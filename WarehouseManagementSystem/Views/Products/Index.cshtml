@model IEnumerable<WarehouseManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products in Warehouse</h1>

<p>
    <a asp-action="Create" asp-route-warehouseId="@ViewData["id"]" class="btn-default btn index-create">Create New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefCode)
            </td>
            <td class="buttons-index">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-default btn index-edit">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-default btn">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-default btn index-delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
